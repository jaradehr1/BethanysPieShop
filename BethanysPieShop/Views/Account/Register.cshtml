@model RegisterViewModel

<h2 class="my-4 text-center text-lg-left">
    If you already have an account, please 
    <a asp-action="Login" asp-controller="Account"> login!</a>
</h2>

<form asp-action="Register" asp-controller="Account" method="post" role="form">
    <!-- To show form error after submission -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" type="text" class="form-control" placeholder="@Html.DisplayNameFor(x => x.UserName)">
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Email)">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" placeholder="@Html.DisplayNameFor(x => x.Password)">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PasswordConfirmed"></label>
        <input asp-for="PasswordConfirmed" type="password" class="form-control" placeholder="@Html.DisplayNameFor(x => x.PasswordConfirmed)">
        <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-dark">Register!</button>
</form>